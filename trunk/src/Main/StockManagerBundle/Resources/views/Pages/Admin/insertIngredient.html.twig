{% extends '::admin.html.twig' %}

{% block page_title %}
		<h1 class="page-header">Insert a new ingredient</h1>
{% endblock %}
{% block content %}
	<div class="panel panel-primary">
		<div class="panel-heading">
			<h3 class="panel-title">Insert ingredient</h3>
		</div>
		<br/>
		{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
		    <table align = "center" style="border-spacing: 10px;">
			<tr>
				<td>{{ form_widget(form.ingredientName, {'attr': {'class': 'form-control','placeholder': 'Ingredient name'}})}}</td>
				<td style="color:red">{{ form_errors(form.ingredientName) }}</td>
		    </tr>
		    </table>
		 
			<br/>
			{{ form_widget(form.save, {'attr': {'class': 'btn btn-default','style': 'margin-left:43%;background-color:#87BAE5'}}) }}
		{{ form_end(form) }}
	</div>
{% endblock %}