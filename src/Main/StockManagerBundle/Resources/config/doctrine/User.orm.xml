<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Main\StockManagerBundle\Entity\User" table="user">
    <indexes>
      <index name="fk_user_role_idx" columns="idRol"/>
    </indexes>
    <unique-constraints>
      <unique-constraint name="id_UNIQUE" columns="id"/>
    </unique-constraints>
    <id name="id" type="bigint" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="firstname" type="string" column="firstName" length="15" nullable="true"/>
    <field name="lastname" type="string" column="lastName" length="15" nullable="true"/>
    <field name="email" type="string" column="email" length="20" nullable="false"/>
     <field name="username" type="string" column="username" length="20" nullable="false"/>
    <field name="password" type="string" column="password" length="20" nullable="false"/>
    <many-to-many field="roles" target-entity="Role" inversed-by="iduser">
      <join-table name="user_role_maps">
        <join-columns>
          <join-column name="idUser" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="idRole" referenced-column-name="id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
